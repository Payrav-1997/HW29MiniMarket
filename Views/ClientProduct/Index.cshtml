@model List<HW27_MiniMarket.Models.Product>
@{
    ViewData["Title"] = "Products";
}


<form asp-action="Index" asp-controller="Product" asp-antiforgery="true">
    <select name="category">
        <option>
            Компьютеры
        </option>
        @foreach (var x in ViewBag.Categories)
        {
            <option>@x.Category</option>
        }
    </select>
    <input type="submit" value="Перейти">
</form>
<table class="table table-active table-bordered table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>Product</td>
            <td>Price</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.ProductName</td>
                <td>@x.Price</td>
                <td><a asp-action="AddCart" asp-controller="ClientProduct" asp-route-id="@x.Id">AddToCart</a></td>
            </tr>
        }
    </tbody>
</table>
